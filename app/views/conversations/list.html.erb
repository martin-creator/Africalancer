<section class="section">
  <div class="columns">
    <div class="column is-4">
      <nav class="menu">
        <p class="menu-label">
          All Conversations
        </p>
        <ul class="menu-list">
          <% @conversations.each do |c| %>
           <% @client = c.sender_id == current_user.id ? c.receiver : c.sender %>
            <%= link_to conversation_detail_path(@client.id) do %>
              <li>
                <article class="message">
                  <div class="message-body">
                    <div class="media">
                      <div class="media-left">
                        <figure class="image is-32x32 m-r-5 avatar offline">
                          <%= image_tag avatar_url(@client), class: "is-rounded" %>
                        </figure>
                      </div>
                      <div class="media-content">
                        <p class="title is-6"><%= @client.full_name %></p>
                        <p class="subtitle is-7">
                          <%= (c.last_message.user_id == current_user.id ? "You: #{c.last_message.content}" : c.last_message.content).truncate(20)%>
                        </p>
                      </div>
                      <div class="media-right">
                        <p class="subtitle is-7"><%= c.last_message.updated_at.strftime("%b %Y") %></p>
                      </div>
                    </div>
                  </div>
                </article>
              </li>
            <% end %>
          <% end %>
        </ul>
      </nav>
    </div>
    <div class="column is-8">
      <section class="hero">
        <div class="hero-body">
          <p class="subtitle has-text-centered">
            Select a conversion
          </p>
        </div>
      </section>
    </div>
  </div>
</section>
