<section class="sectiom">
    <div class="container">
    <p class="title">View Offers </p>
    <table class="table is-fullwidth">
    <thead>
        <tr>
            <th>Date</th>
            <th>Seller Name</th>
            <th>Notes</th>
            <th>Amount</th>
            <th>Deliver in</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    <% if @offers.blank? %>
      <tr>
        <td colspan="7" class="has-text-centered"> <h1>NOTHING TO SHOW HERE</h1> </td>
      </tr>
    <% end %>
    <% @offers.each do |o| %>
        <tr>
            <td><%= o.created_at.strftime('%d %b %Y')%></td>
            <td>
            <figure class="image is-48x48">
                <%= image_tag avatar_url(o.user), class: "is-rounded" %>
                </figure>
            </td>
            <td><%= o.note %></td>
            <td>$<%= o.amount %></td>
            <td><%= pluralize(o.days, "day") %></td>
            <td><%= o.status.capitalize %></td>
            <td>
            <%= link_to 'Accept', nil, class: "button is-small is-success" %>
            <%= link_to 'Reject', nil, class: "button is-small is-danger" %>
            </td>
        </tr>
    <% end %>
    </tbody>
    </table>
    </div>
</section>