<section class="section">
  <div class="container">
    <p class="title">Earnings</p>
    <div class="card">
      <div class="card-content">
        <div class="columns has-text-centered">
          <div class="column">
            Net income
            <p class="is-size-4">$100</p>
          </div>
          <div class="column">
            Withdrawn
            <p class="is-size-4">$100</p>
          </div>
          <div class="column">
            Used for Purchases
            <p class="is-size-4">$100</p>
          </div>
          <div class="column">
            Pending Clearance
            <p class="is-size-4">$100</p>
          </div>
          <div class="column">
            Available for Withdrawal
            <p class="is-size-4">$100</p>
          </div>
        </div>
      </div>
    </div>
    <!-- Withdraw Form -->
    <div class="card m-t-20">
      <div class="card-content">
        <%= form_with do |f| %>
          <div class="field is-grouped">
            <div class="field is-horizontal" style="flex:1">
              <div class="field-label is-normal">
                <label class="label">Withdraw Amount ($)</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <%= f.number_field :amount, value: 0, class: "input"%>
                </div>
                <div class="field">
                  <%= f.submit "Send Request", class: "button is-danger"%>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Transactions List -->
    <div class="m-t-20">
      <div class="card m-t-20">
        <div class="card-header-title">Transaction History</div>
      
      <div class="card-content">
        <table class="table is-fullwidth">
          <thead>
            <tr>
              <th>Date</th>
              <th>Source</th>
              <th>Type</th>
              <th>Status</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>12 July 2019</td>
              <td>I will do it for you</td>
              <td>Transaction</td>
              <td><span class="tag is-warning">In progress</span></td>
              <td>$15</td>
            </tr>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</section>
